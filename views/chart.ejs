<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ping Results Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
</head>

<body>
    <h1>Ping Results Chart</h1>
    <canvas id="pingChart" width="400" height="200"></canvas>

    <script>
        const ctx = document.getElementById('pingChart').getContext('2d');
        let pingChart; // Declare the chart variable

        // Define a function to update the chart
        function updateChart() {
            fetch('/ping-results/data')
                .then((response) => response.json())
                .then((data) => {
                    // Update the chart's data and labels
                    pingChart.data.labels = data.timestamps;
                    pingChart.data.datasets[0].data = data.responseTimes;
                    pingChart.data.datasets[1].data = data.packetLoss; // Update packet loss data
                    pingChart.update(); // Update the chart
                })
                .catch((error) => {
                    console.error('Error fetching data:', error);
                });
        }

        // Create the initial chart
        function createChart() {
            pingChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Response Time (ms)',
                        data: [],
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1,
                    },
                    {
                        label: 'Packet Loss',
                        data: [],
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1,
                    }],
                },
                options: {
                    scales: {
                        x: {
                            type: 'time',
                            time: {
                                unit: 'hour',
                            },
                        },
                        y: {
                            beginAtZero: true,
                        },
                    },
                },
            });

            updateChart(); // Update the chart immediately
            // Set up auto-update every 5 seconds (5000 milliseconds)
            setInterval(updateChart, 5000);
        }

        // Initialize the chart
        createChart();
    </script>
</body>

</html>